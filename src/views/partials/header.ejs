<header>
    <!--Icono-->
    <div class="logo">
        <a href="/"><img src="/images/logo2.png" alt=""></a>
    </div>
    <!--Nav-Bar-->
    <div class="nav-bar">
        <nav>
            <ul>
                <li><a href="/productos">Nuestros Productos</a></li>
                <li><a href="#">Otros productos</a></li>
            </ul>
        </nav>
    </div>

    <div class="icons">

        <!-- iconos que quedan siempre -->
        
        <!-- lupa -->
        <div class="icon-magnifying-glass">
            <form action="/productos/buscar" method="post">
                
               <input type="text" id='' name="search" placeholder="Buscar..."  >
               <button type="submit" class="lupa">
                    <i class="fa-solid fa-magnifying-glass" title="Busca productos!"></i>
               </button>
               
           </form>
        </div>

        <!-- hamburguesa -->
        <div class="icon-bars">
            <a href="#"><i class="fa-solid fa-bars"></i></a>
        </div>


        <!-- Si es logged entonces  -->
            <% if (locals.isLogged) { %>
                <% console.log("VER QUE HAY EN LOCALS IS LOGGED: ", locals.isLogged) %> 
                <% console.log("VER QUE HAY EN LOCALS userLogged: ", locals.userLogged.rols_id) %> 
            
            <!-- if user is an admin the show the register -->
            <% if (locals.isLogged && locals.userLogged.rols_id === 2) { %>
            <div class="icon-register">
                <li><a href="/usuarios/registro" title="Registrate!"><i class="far fa-id-card"></i></a></li>
            </div>
            <% } %>

            <div class="icon-cart">
                <a href="/productos/carrito" title="Mi Carrito"><i class="fa-solid fa-cart-shopping"></i></a>
            </div>

            <div class="icon-register">
                <a href="/usuarios/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
            </div>

            <div class="icon-register">
             <a href="/usuarios/perfil">   <img src="/images/users/<%=locals.userLogged.image %>" width="30" style="border-radius: 100%;"></a>
            </div>

            <div class="icon-register">
                Hola, <%= locals.userLogged.first_name %>
            </div>

        
        <!-- Si es logged entonces  -->
        <% } else { %>
            <div class="icon-user">
                <a href="/usuarios/login" title="Login"><i class="fa-solid fa-user"></i></a>
            </div>

            <div class="icon-register">
                <li><a href="/usuarios/registro" title="Registrate!"><i class="far fa-id-card"></i></a></li>
            </div>

            <!-- Contactenos -->
            <div class="icon-envelope">
                <a href="/contactenos" title="Contactanos!"><i class="fa-regular fa-envelope"></i></a>
            </div>

        <% } %>


    </div>

</header>