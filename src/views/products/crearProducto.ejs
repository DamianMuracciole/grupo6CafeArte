<body>
    
    <!-- Aqui va el header -->
    <%- include('../partials/header') %>

    <!-- Aqui va el main -->
    <main>
        <div class="main-title-ctn">
            <p>Crear Producto</p>
        </div>
        <div class="main-form-ctn">
            <form action="/editarProducto" method="" class="formCyE">
